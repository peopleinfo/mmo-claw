{
  "title": "TikTok Poster Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "assetPath": {
      "title": "Asset Path",
      "type": "string",
      "description": "Absolute or workspace-relative media file path",
      "editor": "textfield"
    },
    "caption": {
      "title": "Caption",
      "type": "string",
      "editor": "textarea"
    },
    "dryRun": {
      "title": "Dry Run",
      "type": "boolean",
      "default": true,
      "editor": "checkbox"
    }
  },
  "required": ["assetPath"]
}
