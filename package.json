{
  "name": "mmo-claw",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "concurrently \"tsc -p tsconfig.main.json -w\" \"vite\" \"wait-on tcp:5173 file:dist/main/main/index.js && npm run electron\"",
    "electron": "node scripts/run-electron.cjs",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "typecheck": "tsc --noEmit -p tsconfig.main.json && tsc --noEmit -p tsconfig.renderer.json",
    "test:e2e": "npm run build:main && npm run build:renderer && playwright test"
  },
  "dependencies": {
    "better-sqlite3": "^12.0.0",
    "clsx": "^2.1.1",
    "fs-extra": "^11.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@playwright/test": "^1.55.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "wait-on": "^8.0.5"
  }
}
