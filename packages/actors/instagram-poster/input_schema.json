{
  "title": "Instagram Poster",
  "type": "object",
  "properties": {
    "profileId": {
      "type": "string",
      "title": "Profile ID"
    },
    "caption": {
      "type": "string",
      "title": "Caption"
    },
    "mediaPath": {
      "type": "string",
      "title": "Media File Path"
    },
    "provider": {
      "type": "string",
      "title": "Browser Provider",
      "default": "camoufox",
      "enum": ["camoufox", "playwright-stealth", "puppeteer-stealth", "playwright-vanilla"]
    },
    "headless": {
      "type": "boolean",
      "title": "Headless Mode",
      "default": true
    },
    "startUrl": {
      "type": "string",
      "title": "Start URL",
      "default": "https://www.instagram.com"
    }
  },
  "required": ["profileId", "caption", "mediaPath"]
}
